<!doctype html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{{ theming.brand.title }}{% endblock %}</title>
        {% stylesheets '@bootstrap_css' '@AppBundle/Resources/public/css/main.css' %}
            <link rel="stylesheet" href="{{ asset_url }}">
        {% endstylesheets %}
        {% block head %}
        {% endblock %}
    </head>
    <body class="env-{{ app.environment }}">
        <nav class="navbar {{ theming.navbar.cssClass }} navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ url('user_profile') }}">
                        {% if theming.brand.showLogo %}
                            <img src="{{ theming.brand.logo }}" alt="{{ theming.brand.title }}" />
                        {% endif %}
                        {% if theming.brand.showTitle %}
                            {{ theming.brand.title }}
                        {% endif %}
                    </a>
                </div>
                <div class="collapse navbar-collapse">
                    {{ knp_menu_render('main', {style: 'navbar'}) }}
                    {% block navigation %}
                        {% macro render_link(route, ico, text) %}
                            <li{% if route == app.request.attributes.get('_route') %} class="active"{% endif %}><a href="{{ url(route) }}">{{ icon(ico~' fa-fw') }} {{ text }}</a></li>
                        {% endmacro %}
                        {% import _self as self %}
                        <ul class="nav navbar-nav navbar-right">
                            {% if app.user %}
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ icon('user fa-fw') }} {{ app.user.displayName }} <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        {{ self.render_link('user_profile', 'user', 'Profile') }}
                                        <li class="divider" role="presentation"></li>
                                        {{ self.render_link('logout', 'sign-out', 'Sign out') }}
                                    </ul>
                                </li>
                            {% else %}
                                {{ self.render_link('app_login', 'sign-in', 'Sign in') }}
                            {% endif %}
                        </ul>
                    {% endblock %}
                </div>
            </div>
        </nav>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    {% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': true } %}
                </div>
            </div>
        </div>
        {% block body %}
        {% endblock %}
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-xs-4">
                        <span class="text-muted">
                            Authserver
                            {% if theming.adminEmail %}
                                &middot;
                                Administrator: <a href="mailto:{{ theming.adminEmail }}">
                                {{ icon('envelope') }} {{ theming.adminEmail }}
                            </a>
                            {% endif %}
                        </span>
                    </div>
                    <div class="col-xs-4 pull-right text-right text-muted">
                        {% spaceless %}
                            <span title="Env: {{ app.environment }}">
                                {% if app.environment == 'dev' %}
                                    {{ icon('bomb fa-fw') }}
                                {% elseif app.environment == 'prod' %}
                                    {{ icon('bolt fa-fw') }}
                                {% endif %}
                            </span>
                            {% if app.user %}
                                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                                    <a href="{{ url('home', {'_switch_user':'_exit'}) }}" class="text-muted">{{ icon('stethoscope fa-fw')}}</a>
                                {% endif %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    {{ icon('magic fa-fw') }}
                                {% elseif is_granted('ROLE_USER') %}
                                    {{ icon('smile-o fa-fw') }}
                                {% else %}
                                    {{ icon('globe fa-fw') }}
                                {% endif %}
                            {% endif %}
                            <a href="http://vbgn.be" class="text-muted">{{ icon('code fa-fw') }}</a>
                        {% endspaceless %}
                    </div>
                </div>
            </div>
        </footer>
        {% block javascript %}
            {% javascripts '@jquery' '@bootstrap_js' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
