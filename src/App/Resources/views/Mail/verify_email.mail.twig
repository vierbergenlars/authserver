{% block body_html %}
    <p>Hello {{ data.user.displayName }},</p>
    <p>Please click the link below to confirm your email address:</p>
    <p>
        {% spaceless %}
            <a href="{{ url('user_email_verify', {id: data.id, verificationCode: data.verificationCode }) }}">
                {{ url('user_email_verify', {id: data.id, verificationCode: data.verificationCode }) }}
            </a>
        {% endspaceless %}
    </p>
    <p>You can click the link above, or copy it to the address bar of your browser.</p>
    <p>If you did not add this email address to your account, you do not have to take any action.</p>
    <hr>
    <p>Generated especially for you by <a href="https://github.com/vierbergenlars/authserver">Authserver</a> at <a href="{{ url('home') }}">{{ url('home') }}</a></p>
{% endblock %}
