{% if theming.navbar.backgroundColor %}
@{{ theming.navbar.variablePrefix }}-bg: {{ theming.navbar.backgroundColor }};
@{{ theming.navbar.variablePrefix }}-toggle-hover-bg: {% if theming.navbar.inverse %}lighten{% else %}darken{% endif %}(@{{ theming.navbar.variablePrefix }}-bg, 10%);
@{{ theming.navbar.variablePrefix }}-toggle-border-color: @{{ theming.navbar.variablePrefix }}-toggle-hover-bg;
{% endif %}

{% if theming.navbar.textColor %}
@{{ theming.navbar.variablePrefix }}-color: {{ theming.navbar.textColor }};
{% endif %}

{% if theming.navbar.linkColor %}
@{{ theming.navbar.variablePrefix }}-link-color: {{ theming.navbar.linkColor }};
{% endif %}

{% if theming.navbar.linkHoverColor %}
@{{ theming.navbar.variablePrefix }}-link-hover-color: {{ theming.navbar.linkHoverColor }};
{% endif %}
